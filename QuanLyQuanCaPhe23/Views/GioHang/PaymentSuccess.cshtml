@model QuanLyQuanCaPhe23.ViewModels.DonHangDetailsViewModel

@{
    ViewBag.Title = "Thanh toán thành công";
    Layout = "_NewLayout";
    decimal tongTien = ViewBag.TongTien != null ? Convert.ToDecimal(ViewBag.TongTien) : 0;
}

<link rel="stylesheet" href="~/css/Pay.css">

<div class="success-page">
    <div class="success-card">
        <div class="success-icon">
            <i class="fa fa-check-circle"></i>
        </div>
        <h1 class="success-title">Thanh Toán Thành Công!</h1>
        <div class="order-details">
            <p class="order-id">Mã đơn hàng: <strong>@Model.DonHangId</strong></p>
            <p class="order-total">Tổng tiền: <strong>@(tongTien > 0 ? tongTien.ToString("#,##0 VNĐ") : "N/A")</strong></p>
        </div>
        <div class="product-list">
            <h3>Chi Tiết Đơn Hàng:</h3>
            <ul>
                @foreach (var item in Model.ChiTietDonHangs)
                {
                    <li>
                        <span class="product-name">@item.CaPhe.Ten</span>
                        <span class="product-quantity">x @item.SoLuong</span>
                    </li>
                }
            </ul>
        </div>
        <p class="thank-you-message">Cảm ơn bạn đã mua hàng tại Phuc Coffee!</p>
        <a asp-controller="NguoiDung" asp-action="ListCaPhe" class="btn-home">
            <i class="fa fa-home"></i> Quay lại trang chủ
        </a>
    </div>
</div>
