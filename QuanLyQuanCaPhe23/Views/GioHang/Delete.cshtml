@model QuanLyQuanCaPhe23.Models.CaPhe

@{
    ViewData["Title"] = "Xóa Sản Phẩm";
    Layout = "_NewLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h2 class="mb-0">Xác nhận Xóa Sản Phẩm</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@Model.Anh" alt="Hình ảnh sản phẩm" class="img-fluid rounded-circle product-image" />
                    </div>
                    <h3 class="text-center mb-4 font-weight-bold">@Model.Ten</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Mô Tả:</strong> @Model.MieuTa</p>
                            <p><strong>Size:</strong> @Model.Size.Ten</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Giá:</strong> @Model.Tien?.ToString("#,##0 VNĐ")</p>
                        </div>
                    </div>
                    <div class="alert alert-warning mt-4" role="alert">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <form asp-action="Delete" method="post" class="text-center">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-5">
                            <i class="fas fa-trash-alt mr-2"></i>Xóa Sản Phẩm
                        </button>
                        <a asp-action="ListCarts" class="btn btn-secondary btn-lg px-5 ml-3">
                            <i class="fas fa-arrow-left mr-2"></i>Quay lại
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
<df-messenger intent="WELCOME"
              chat-title="CSKH-PPK-Coffee"
              agent-id="66dfadc2-e7dc-4761-9ada-f796b9eabad2"
              language-code="vi"></df-messenger>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
    }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .card-header {
        background: linear-gradient(45deg, #ff4b2b, #ff416c);
    }

    .product-image {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border: 5px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .btn {
        border-radius: 30px;
        text-transform: uppercase;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .btn-danger {
        background: linear-gradient(45deg, #ff4b2b, #ff416c);
        border: none;
    }

    .btn-secondary {
        background: linear-gradient(45deg, #3f4c6b, #606c88);
        border: none;
    }

    .alert-warning {
        border-left: 5px solid #ffc107;
        background-color: #fff3cd;
        color: #856404;
    }

    df-messenger {
        --df-messenger-bot-message: #ff416c;
        --df-messenger-button-titlebar-color: #ff4b2b;
        --df-messenger-chat-background-color: #fafafa;
        --df-messenger-font-color: white;
        --df-messenger-send-icon: #ff416c;
        --df-messenger-user-message: #606c88;
    }
</style>