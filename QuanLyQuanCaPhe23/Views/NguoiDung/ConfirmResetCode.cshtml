@{
    ViewData["Title"] = "Xác nhận mã khôi phục";
    Layout = "_NewLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.min.css" />
    <style>
        .reset-form {
            max-width: 500px;
            margin: auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 10px;
        }

        .btn-primary {
            background: linear-gradient(45deg, #FF6B95, #FF8E53);
            border: none;
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #FF8E53, #FF6B95);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 107, 149, 0.4);
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            }

        .alert {
            border-radius: 10px;
            margin-top: 20px;
        }

        .input-group-append {
            cursor: pointer;
        }

        .input-group-text {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="reset-form">
                    <h1 class="text-center">Xác nhận khôi phục mật khẩu</h1>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    @if (ViewData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="ConfirmResetCode" method="post">
                        <input type="hidden" name="Email" value="@Model?.Email" />
                        <div class="form-group">
                            <label for="resetCode">Nhập mã xác nhận:</label>
                            <input type="text" id="resetCode" name="ResetCode" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="newPassword">Nhập mật khẩu mới:</label>
                            <div class="input-group">
                                <input type="password" id="newPassword" name="NewPassword" class="form-control" required />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="togglePassword">
                                        <i class="bi bi-eye"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Nhập lại mật khẩu mới:</label>
                            <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </form>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("DangNhap", "NguoiDung")" class="btn btn-secondary">Quay về đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordField = document.getElementById('newPassword');
            const eyeIcon = this.querySelector('i');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                eyeIcon.classList.remove('bi-eye');
                eyeIcon.classList.add('bi-eye-slash');
            } else {
                passwordField.type = 'password';
                eyeIcon.classList.remove('bi-eye-slash');
                eyeIcon.classList.add('bi-eye');
            }
        });
    </script>
</body>
</html>