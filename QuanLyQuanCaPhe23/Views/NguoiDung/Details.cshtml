        }

    .rating {
        color: #ffc107;
        margin-bottom: 10px;
    }

    /* Thêm bình luận */
    form {
        margin-top: 30px;
    }

    textarea {
        width: 100%;
        height: 100px;
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        resize: vertical;
    }

    select {
        width: 100%;
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    button {
        padding: 10px 20px;
        font-weight: 600;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>
