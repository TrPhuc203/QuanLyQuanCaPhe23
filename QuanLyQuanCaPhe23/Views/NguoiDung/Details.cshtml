@model QuanLyQuanCaPhe23.Models.CaPhe

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "_NewLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link rel="stylesheet" href="~/css/card.css">
<div class="container mt-5">
    <div class="product-details-container">
        <div class="product-image-container">
            <img src="@Model.Anh" class="product-image" alt="@Model.Ten" />
        </div>
        <div class="product-info-container">
            <h1 class="product-title">@Model.Ten</h1>
            <div class="product-meta">
                <span class="product-size">Size: @Model.Size.Ten</span>
                <span class="product-price">@Model.Tien?.ToString("#,##0 VNĐ")</span>
            </div>
            <p class="product-description">@Model.MieuTa</p>
            <div class="product-actions">
                <a href="@Url.Action("AddToCart", "GioHang", new { id = Model.Id })" class="btn btn-primary btn-lg">
                    <i class="fas fa-shopping-cart mr-2"></i>Thêm vào giỏ hàng
                </a>
                <a asp-action="ListCaPhe" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-arrow-left mr-2"></i>Trở về danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
<df-messenger intent="WELCOME"
              chat-title="CSKH-PPK-Coffee"
              agent-id="66dfadc2-e7dc-4761-9ada-f796b9eabad2"
              language-code="vi"></df-messenger>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1170px;
        padding: 0 15px;
    }

    .product-details-container {
        display: flex;
        background-color: #ffffff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .product-image-container {
        flex: 1;
        padding: 2rem;
    }

    .product-image {
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .product-info-container {
        flex: 1;
        padding: 2rem;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 1rem;
    }

    .product-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .product-size, .product-price {
        font-size: 1.1rem;
        font-weight: 600;
        color: #6c757d;
    }

    .product-price {
        color: #28a745;
    }

    .product-description {
        font-size: 1rem;
        line-height: 1.6;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .product-actions {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
        }

    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #ffffff;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
        }
</style>
