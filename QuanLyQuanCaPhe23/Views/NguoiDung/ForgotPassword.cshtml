@model string

@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = "_NewLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/colorful-login.css" />
</head>
<body class="colorful-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-card mt-5">
                    <div class="login-body">
                        <h1 class="login-title text-center">Quên Mật Khẩu</h1>

                        @* Hiển thị thông báo lỗi hoặc thành công *@
                        @if (!string.IsNullOrEmpty(ViewData["Message"] as string))
                        {
                            <div class="alert alert-info text-center">
                                @ViewData["Message"]
                            </div>
                        }

                        <form asp-action="ForgotPassword" method="post">
                            <div class="form-group">
                                <label for="username" class="control-label">Nhập tên đăng nhập:</label>
                                <input type="text" id="username" name="username" class="form-control" required />
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary btn-block">Gửi mã</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .colorful-bg {
            background: linear-gradient(45deg, #FF9A8B, #FF6B95, #FF8E53, #FFA647, #FFD700);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }

        .login-card {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            border: 5px solid #FFD700;
        }

        .login-body {
            padding: 40px;
        }

        .login-title {
            color: #FF6B95;
            font-size: 2.5rem;
            margin-bottom: 30px;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-control {
            border: none;
            border-bottom: 3px solid #FF8E53;
            border-radius: 0;
            padding: 10px 5px;
            background-color: transparent;
            transition: all 0.3s ease;
            color: #333;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #FF6B95;
            }

        .btn-primary {
            background: linear-gradient(45deg, #FF6B95, #FF8E53);
            border: none;
            border-radius: 30px;
            padding: 12px 30px;
            font-size: 1.2rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #FF8E53, #FF6B95);
                transform: translateY(-3px);
                box-shadow: 0 7px 20px rgba(255, 107, 149, 0.4);
            }
    </style>
</body>
</html>
