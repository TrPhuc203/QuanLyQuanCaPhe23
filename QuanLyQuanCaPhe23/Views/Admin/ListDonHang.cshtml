@model IEnumerable<QuanLyQuanCaPhe23.Models.DonHang>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/site.css">
<div class="container-fluid mt-5">
    <h1 class="text-center mb-5 order-list-title">DANH SÁCH ĐƠN HÀNG</h1>

    <div class="card order-list-card mb-5">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col"><i class="fas fa-hashtag"></i> Mã đơn hàng</th>
                            <th scope="col"><i class="fas fa-user"></i> Mã khách hàng</th>
                            <th scope="col"><i class="far fa-calendar-alt"></i> Ngày tạo đơn</th>
                            <th scope="col"><i class="fab fa-paypal"></i> Mã PayPal</th>
                            <th scope="col" colspan="2"><i class="fas fa-cogs"></i> Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.KhachHangId</td>
                                <td>@item.NgayTao?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(string.IsNullOrEmpty(item.PayPalKey) ? "Thanh toán tại quầy" : item.PayPalKey)</td>
                                <td>
                                    <a href="@Url.Action("DonHangDetails", "Admin", new { id = item.Id })" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Chi tiết</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("DeleteDonHang", "Admin", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?');"><i class="fas fa-trash-alt"></i> Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" href="/Admin/ListDonHang?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="/Admin/ListDonHang?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="/Admin/ListDonHang?page=3">3</a></li>
            <li class="page-item"><a class="page-link" href="/Admin/ListDonHang?page=4">4</a></li>
            <li class="page-item"><a class="page-link" href="/Admin/ListDonHang?page=5">5</a></li>
            <li class="page-item"><a class="page-link" href="/Admin/ListDonHang?page=6">6</a></li>
            <li class="page-item"><a class="page-link" href="/Admin/ListDonHang?page=7">7</a></li>
        </ul>
    </nav>
</div>

<style>
    body {
        background-color: #f4e4c2;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .container-fluid {
        max-width: 95%;
        margin: 0 auto;
        padding: 0 15px;
    }

    .order-list-title {
        color: #8B4513;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 3px;
        margin-bottom: 40px;
        font-size: 2.8rem;
        text-shadow: 2px 2px 4px rgba(139, 69, 19, 0.3);
    }

    .order-list-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(139, 69, 19, 0.2);
        transition: all 0.3s ease;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
    }

        .order-list-card:hover {
            box-shadow: 0 15px 40px rgba(139, 69, 19, 0.3);
            transform: translateY(-5px);
        }

    .table {
        color: #333;
        font-size: 1.1rem;
        margin-bottom: 0;
    }

        .table thead th {
            background: #8B4513;
            color: #fff;
            border: none;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 20px 15px;
            vertical-align: middle;
        }

        .table tbody td {
            padding: 20px 15px;
            vertical-align: middle;
            border-bottom: 1px solid rgba(139, 69, 19, 0.1);
        }

    .table-hover tbody tr:hover {
        background-color: rgba(139, 69, 19, 0.1);
    }

    .btn {
        padding: 10px 20px;
        font-weight: 600;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border-radius: 50px;
    }

    .btn-info {
        background: #e0ac1c;
        border: none;
        color: #fff;
    }

        .btn-info:hover {
            background: #d4a017;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(224, 172, 28, 0.4);
        }

    .btn-danger {
        background: #8B4513;
        border: none;
    }

        .btn-danger:hover {
            background: #723a0f;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.4);
        }

    .pagination {
        margin-top: 40px;
    }

        .pagination .page-link {
            color: #8B4513;
            border: none;
            padding: 12px 18px;
            font-weight: 600;
            background: #f4e4c2;
            margin: 0 5px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

            .pagination .page-link:hover {
                background: #e0ac1c;
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(224, 172, 28, 0.4);
            }

        .pagination .page-item.active .page-link {
            background: #8B4513;
            color: #fff;
        }
</style>