@model IEnumerable<QuanLyQuanCaPhe23.Models.CaPhe>

@{
    ViewData["Title"] = "Danh sách cà phê";
}

<div class="container mt-5">
    <form class="mb-4" asp-action="ListCaPhe" method="get">
        <div class="form-row align-items-end">
            <div class="col-md-3">
                <label for="filter1">Lọc theo tên:</label>
                <input type="text" id="filter1" name="kw" class="form-control" />
            </div>
            <div class="col-md-3">
                <label for="filter2">Lọc theo size:</label>
                <select id="filter2" name="size" class="form-control">
                    <option value="1">Nhỏ</option>
                    <option value="2">Vừa</option>
                    <option value="3">Lớn</option>
                    <option value="4">Nóng</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="filter3">Lọc theo giá:</label>
                <input type="number" id="filter3" name="gia" class="form-control" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-block">Lọc</button>
            </div>
        </div>
    </form>

    <ul class="pagination justify-content-center mb-4">
        <li class="page-item"><a class="page-link" href="/Admin/ListCaPhe?page=1">1</a></li>
        <li class="page-item"><a class="page-link" href="/Admin/ListCaPhe?page=2">2</a></li>
        <li class="page-item"><a class="page-link" href="/Admin/ListCaPhe?page=3">3</a></li>
        <li class="page-item"><a class="page-link" href="/Admin/ListCaPhe?page=4">4</a></li>
        <li class="page-item"><a class="page-link" href="/Admin/ListCaPhe?page=5">5</a></li>
        <li class="page-item"><a class="page-link" href="/Admin/ListCaPhe?page=6">6</a></li>
        <li class="page-item"><a class="page-link" href="/Admin/ListCaPhe?page=7">7</a></li>
    </ul>

    <p>
        <a asp-action="Create" class="btn btn-success mb-4">Thêm mới cà phê</a>
    </p>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Ảnh</th>
                <th>Tên cà phê</th>
                <th>Miêu tả</th>
                <th>Size</th>
                <th>Giá tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.Anh)" alt="@item.Ten" class="img-fluid rounded" width="100px" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                    <td>@Html.DisplayFor(modelItem => item.MieuTa)</td>
                    <td>@Html.DisplayFor(modelItem => item.Size.Ten)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tien)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #f8f9fa;
        color: #343a40;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 1200px;
    }

    .card {
        margin-bottom: 20px;
    }

    .btn-block {
        display: block;
        width: 100%;
    }

    .table {
        font-size: 1rem;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #ffffff;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

    .pagination {
        margin-bottom: 20px;
    }

        .pagination .page-link {
            color: #007bff;
        }

            .pagination .page-link:hover {
                color: #0056b3;
            }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
            color: #ffffff;
        }
</style>
